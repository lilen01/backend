<mvc:XMLView
    controllerName="vendor.controller.MainPage"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Page id="MainPage" showNavButton="true" navButtonPress="toLoginPage">
        
        <content>
            <Table
                id="userTable"
                items="{userData>/user}"
                
            >
                <columns>
                    <Column>
                        <Text text="Username" />
                    </Column>
                    <Column>
                        <Text text="email" />
                    </Column>
                    <Column>
                        <Text text="password" />
                    </Column>
                    <Column hAlign="End">
                        <Text text="Edit"></Text>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{userData>userName}" />
                            <Text text="{userData>email}" />
                            <Text text="{userData>password}" />
                            <Button icon="sap-icon://edit" press="editUserData"></Button>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>

        
    </Page>
</mvc:XMLView>
